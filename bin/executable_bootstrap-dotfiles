#!/usr/bin/env zsh

set -e

if ! command -v chezmoi > /dev/null; then
    if command -v brew > /dev/null; then
        brew install chezmoi
    elif command -v apt > /dev/null; then
        sudo apt update
        sudo apt install -y chezmoi
    else
        echo "chezmoi is not installed"
        exit 1
    fi
fi

chezmoi init --apply zsimic
